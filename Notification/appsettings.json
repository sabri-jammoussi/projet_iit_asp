{
    "ConnectionStrings": {
        "UsersConnections": "Server=DESKTOP-F0M678G\\MSSQLSERVER01;Database=OltpDataBase;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True;"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:5555"
            }
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "System": "Warning",
                "Hangfire": "Information"
            }
        },
        "Enrich": [ "FromLogContext" ],
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console",
                            "Args": {
                                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}][{SourceContext}] {Message:lj}{NewLine}{Exception}"
                            }
                        },
                        {
                            "Name": "File",
                            "Args": {
                                "path": "logs\\notification-log.txt",
                                "rollingInterval": "Day",
                                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}][{SourceContext}] {Message:lj}{NewLine}{Exception}"
                            }
                        }
                    ]
                }
            }
        ]
    },
    "AllowedHosts": "*"
}
